@page "{id?}"
@model SmartSam.Pages.Purchasing.Supplier.DetailModel
@{
    ViewData["Title"] = "Supplier Detail";
    var messageType = (Model.MessageType ?? "info").ToLowerInvariant();
    var hasInputFieldError = false;
    foreach (var state in ViewData.ModelState)
    {
        if (state.Key.StartsWith("Input.", StringComparison.OrdinalIgnoreCase) && state.Value.Errors.Count > 0)
        {
            hasInputFieldError = true;
            break;
        }
    }
    var useInlineAlert = !string.IsNullOrWhiteSpace(Model.Message) && !hasInputFieldError;
    var lockGeneralInfo = !Model.CanSave;
}

<section class="content">
    <div class="container-fluid">
        <form method="post"
              asp-page-handler="Save"
              id="supplierDetailForm"
              data-is-edit="@Model.IsEdit.ToString().ToLowerInvariant()"
              data-current-id="@(Model.Id?.ToString() ?? string.Empty)">
            <div class="row d-flex align-items-stretch">
                <div class="col-md-8">
                    <div class="card card-primary card-outline h-100 mb-0">
                        <div class="card-header p-2">
                            <h3 class="card-title">General Information</h3>
                        </div>

                        <div class="card-body p-2">
                            <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>
                            @if (useInlineAlert)
                            {
                                var alertClass = messageType switch
                                {
                                    "success" => "alert-success",
                                    "warning" => "alert-warning",
                                    "error" => "alert-danger",
                                    _ => "alert-info"
                                };
                                var alertIcon = messageType switch
                                {
                                    "success" => "fas fa-check-circle",
                                    "warning" => "fas fa-exclamation-triangle",
                                    "error" => "fas fa-ban",
                                    _ => "fas fa-info-circle"
                                };
                                var alertTitle = messageType switch
                                {
                                    "error" => "Error",
                                    "warning" => "Warning",
                                    _ => "Notification"
                                };
                                <div class="alert @alertClass alert-dismissible mb-2">
                                    <div class="d-flex align-items-center pr-4">
                                        <i class="@alertIcon mr-2" aria-hidden="true"></i>
                                        <span class="font-weight-bold mr-1">@alertTitle:</span>
                                        <span>@Model.Message</span>
                                    </div>
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                            }
                            @{
                                var currentStatusId = Model.Input.Status ?? 0;
                                var statusText = Model.Statuses.FirstOrDefault(x => x.Value == currentStatusId.ToString())?.Text
                                                 ?? (currentStatusId == 0 ? "Draft" : currentStatusId.ToString());
                            }
                            <fieldset disabled="@(lockGeneralInfo ? "disabled" : null)">
                                <div class="supplier-detail-grid">
                                    <label class="supplier-detail-label">Supplier Code<span class="required-mark">*</span></label>
                                    <div class="supplier-detail-control">
                                        <input asp-for="Input.SupplierCode" class="form-control form-control-sm" tabindex="1" />
                                        <span asp-validation-for="Input.SupplierCode" class="text-danger small"></span>
                                    </div>

                                    <label class="supplier-detail-label">Supplier Name<span class="required-mark">*</span></label>
                                    <div class="supplier-detail-control supplier-detail-span-3">
                                        <input asp-for="Input.SupplierName" class="form-control form-control-sm" tabindex="2" />
                                        <span asp-validation-for="Input.SupplierName" class="text-danger small"></span>
                                    </div>

                                    <label class="supplier-detail-label">Address<span class="required-mark">*</span></label>
                                    <div class="supplier-detail-control supplier-detail-span-5">
                                        <textarea asp-for="Input.Address" class="form-control form-control-sm" rows="2" tabindex="3"></textarea>
                                        <span asp-validation-for="Input.Address" class="text-danger small"></span>
                                    </div>

                                    <label class="supplier-detail-label">Phone</label>
                                    <div class="supplier-detail-control">
                                        <input asp-for="Input.Phone" class="form-control form-control-sm" tabindex="4" />
                                    </div>

                                    <label class="supplier-detail-label">Fax</label>
                                    <div class="supplier-detail-control">
                                        <input asp-for="Input.Fax" class="form-control form-control-sm" tabindex="5" />
                                    </div>

                                    <div class="supplier-detail-empty"></div>

                                    <label class="supplier-detail-label">Contact Person</label>
                                    <div class="supplier-detail-control">
                                        <input asp-for="Input.Contact" class="form-control form-control-sm" tabindex="6" />
                                    </div>

                                    <label class="supplier-detail-label">Position</label>
                                    <div class="supplier-detail-control">
                                        <input asp-for="Input.Position" class="form-control form-control-sm" tabindex="7" />
                                    </div>

                                    <label class="supplier-detail-label">Mobile</label>
                                    <div class="supplier-detail-control">
                                        <input asp-for="Input.Mobile" class="form-control form-control-sm" tabindex="8" />
                                    </div>

                                    <label class="supplier-detail-label">Business</label>
                                    <div class="supplier-detail-control supplier-detail-span-5">
                                        <input asp-for="Input.Business" class="form-control form-control-sm" tabindex="9" />
                                    </div>

                                    <label class="supplier-detail-label">Document</label>
                                    <div class="supplier-detail-check">
                                        <input asp-for="Input.Document" type="checkbox" class="align-middle" tabindex="10" style="width:16px;height:16px;@(Model.CanSave ? "cursor:pointer;" : "")" />
                                    </div>

                                    <label class="supplier-detail-label">Certificate</label>
                                    <div class="supplier-detail-control">
                                        <input asp-for="Input.Certificate" class="form-control form-control-sm" tabindex="11" />
                                    </div>

                                    <label class="supplier-detail-label">Dept*</label>
                                    <div class="supplier-detail-control">
                                        <select asp-for="Input.DeptID" asp-items="Model.Departments" class="form-control form-control-sm" tabindex="12"></select>
                                    </div>

                                    <label class="supplier-detail-label">Service</label>
                                    <div class="supplier-detail-control supplier-detail-span-5">
                                        <input asp-for="Input.Service" class="form-control form-control-sm" tabindex="13" />
                                    </div>

                                    <label class="supplier-detail-label">Comment</label>
                                    <div class="supplier-detail-control supplier-detail-span-5">
                                        <textarea asp-for="Input.Comment" class="form-control form-control-sm" rows="2" tabindex="14"></textarea>
                                    </div>

                                    <label class="supplier-detail-label">CodeOfAcc</label>
                                    <div class="supplier-detail-control">
                                        <input asp-for="Input.CodeOfAcc" class="form-control form-control-sm" tabindex="15" />
                                    </div>

                                    <label class="supplier-detail-label">IsNew</label>
                                    <div class="supplier-detail-check">
                                        <input asp-for="Input.IsNew" type="checkbox" class="align-middle" tabindex="16" style="width:16px;height:16px;@(Model.CanSave ? "cursor:pointer;" : "")" />
                                    </div>

                                    <label class="supplier-detail-label">Status</label>
                                    <div class="supplier-detail-control">
                                        <input type="text" class="form-control form-control-sm" value="@statusText" readonly />
                                    </div>
                                </div>
                            </fieldset>
                        </div>

                        <div class="card-footer py-2 module-action-bar">
                            @if (Model.CanSave)
                            {
                                <button type="submit" class="btn btn-sm btn-action-save px-4 mr-2 mb-1"><i class="fas fa-save"></i> Save</button>
                            }
                            @if (Model.CanSubmit)
                            {
                                <button type="submit" formaction="?handler=SubmitApproval" class="btn btn-sm btn-action-submit px-4 mr-2 mb-1"><i class="fas fa-paper-plane"></i> Submit</button>
                            }
                            else if (Model.IsEdit && Model.PagePerm.HasPermission(4) && Model.IsSubmitted)
                            {
                                <button type="button" class="btn btn-sm btn-action-submit px-4 mr-2 mb-1" disabled title="Already submitted"><i class="fas fa-paper-plane"></i> Submit</button>
                            }
                            <a asp-page="./Index" asp-route-ViewMode="@Model.ViewMode" asp-route-Year="@Model.Year" class="btn btn-sm btn-action-close px-4 mb-1"><i class="fas fa-arrow-left"></i> Back to List</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card card-success card-outline h-100 mb-0">
                        <div class="card-header p-2">
                            <h3 class="card-title">Approved Information</h3>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive" style="max-height: 520px;">
                                <table class="table table-sm table-bordered table-hover mb-0">
                                    <thead class="thead-light sticky-top">
                                        <tr>
                                            <th>Action</th>
                                            <th>User</th>
                                            <th>Action Date</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.Histories.Count == 0)
                                        {
                                            <tr><td colspan="3" class="text-center text-muted">No history</td></tr>
                                        }
                                        else
                                        {
                                            @foreach (var h in Model.Histories)
                                            {
                                                <tr>
                                                    <td>@h.Action</td>
                                                    <td>@h.UserName</td>
                                                    <td>@(h.ActionDate?.ToString("dd/MM/yyyy HH:mm") ?? "")</td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

@section Styles {
    <link rel="stylesheet" href="~/css/Purchasing/Supplier/index.css" asp-append-version="true" />
}

@section Scripts {
    <script src="~/js/Purchasing/Supplier/detail.js" asp-append-version="true"></script>
}
