@page "{id?}"
@model SmartSam.Pages.Purchasing.Supplier.DetailModel
@{
    ViewData["Title"] = "Supplier Detail";
}

<section class="content">
    <div class="container-fluid">
        <form method="post" asp-page-handler="Save">
            <div class="row d-flex align-items-stretch">
                <div class="col-md-8">
                    <div class="card card-primary card-outline h-100 mb-0">
                        <div class="card-header p-2">
                            <h3 class="card-title">General Information</h3>
                        </div>

                        <div class="card-body p-2">
                            @if (!string.IsNullOrWhiteSpace(Model.Message))
                            {
                                <div class="alert alert-info py-2 mb-2">@Model.Message</div>
                            }

                            <div class="row no-gutters align-items-center mb-2">
                                <div class="col-2 text-left pr-2"><label class="col-form-label-sm mb-0">Supplier Code</label></div>
                                <div class="col-4"><input asp-for="Input.SupplierCode" class="form-control form-control-sm" /></div>
                                <div class="col-2 text-left pl-3 pr-2"><label class="col-form-label-sm mb-0">Status</label></div>
                                <div class="col-4"><select asp-for="Input.Status" asp-items="Model.Statuses" class="form-control form-control-sm"></select></div>
                            </div>

                            <div class="row no-gutters align-items-center mb-2">
                                <div class="col-2 text-left pr-2"><label class="col-form-label-sm mb-0">Supplier Name</label></div>
                                <div class="col-8"><input asp-for="Input.SupplierName" class="form-control form-control-sm" /></div>
                                <div class="col-2 pl-3"><div class="custom-control custom-checkbox"><input asp-for="Input.IsNew" class="custom-control-input" /><label asp-for="Input.IsNew" class="custom-control-label">Is New</label></div></div>
                            </div>

                            <div class="row no-gutters align-items-center mb-2">
                                <div class="col-2 text-left pr-2"><label class="col-form-label-sm mb-0">Department</label></div>
                                <div class="col-4"><select asp-for="Input.DeptID" asp-items="Model.Departments" class="form-control form-control-sm"></select></div>
                                <div class="col-2 text-left pl-3 pr-2"><label class="col-form-label-sm mb-0">Approved Date</label></div>
                                <div class="col-4"><input asp-for="Input.ApprovedDate" class="form-control form-control-sm" type="date" /></div>
                            </div>

                            <div class="row no-gutters align-items-start mb-2">
                                <div class="col-2 text-left pr-2"><label class="col-form-label-sm mt-1 mb-0">Address</label></div>
                                <div class="col-10"><textarea asp-for="Input.Address" class="form-control form-control-sm" rows="2"></textarea></div>
                            </div>

                            <div class="row no-gutters align-items-center mb-2">
                                <div class="col-2 text-left pr-2"><label class="col-form-label-sm mb-0">Phone</label></div>
                                <div class="col-2"><input asp-for="Input.Phone" class="form-control form-control-sm" /></div>
                                <div class="col-2 text-left pl-3 pr-2"><label class="col-form-label-sm mb-0">Mobile</label></div>
                                <div class="col-2"><input asp-for="Input.Mobile" class="form-control form-control-sm" /></div>
                                <div class="col-1 text-left pl-3 pr-2"><label class="col-form-label-sm mb-0">Fax</label></div>
                                <div class="col-3"><input asp-for="Input.Fax" class="form-control form-control-sm" /></div>
                            </div>

                            <div class="row no-gutters align-items-center mb-2">
                                <div class="col-2 text-left pr-2"><label class="col-form-label-sm mb-0">Contact Person</label></div>
                                <div class="col-4"><input asp-for="Input.Contact" class="form-control form-control-sm" /></div>
                                <div class="col-2 text-left pl-3 pr-2"><label class="col-form-label-sm mb-0">Position</label></div>
                                <div class="col-4"><input asp-for="Input.Position" class="form-control form-control-sm" /></div>
                            </div>

                            <div class="row no-gutters align-items-center mb-2">
                                <div class="col-2 text-left pr-2"><label class="col-form-label-sm mb-0">Business</label></div>
                                <div class="col-4"><input asp-for="Input.Business" class="form-control form-control-sm" /></div>
                                <div class="col-2 text-left pl-3 pr-2"><label class="col-form-label-sm mb-0">Service</label></div>
                                <div class="col-4"><input asp-for="Input.Service" class="form-control form-control-sm" /></div>
                            </div>

                            <div class="row no-gutters align-items-center mb-2">
                                <div class="col-2 text-left pr-2"><label class="col-form-label-sm mb-0">Document</label></div>
                                <div class="col-4"><input asp-for="Input.Document" class="form-control form-control-sm" /></div>
                                <div class="col-2 text-left pl-3 pr-2"><label class="col-form-label-sm mb-0">Certificate</label></div>
                                <div class="col-4"><input asp-for="Input.Certificate" class="form-control form-control-sm" /></div>
                            </div>

                            <div class="row no-gutters align-items-center mb-0">
                                <div class="col-2 text-left pr-2"><label class="col-form-label-sm mb-0">CodeOfAcc</label></div>
                                <div class="col-4"><input asp-for="Input.CodeOfAcc" class="form-control form-control-sm" /></div>
                                <div class="col-2 text-left pl-3 pr-2"><label class="col-form-label-sm mb-0">Comment</label></div>
                                <div class="col-4"><input asp-for="Input.Comment" class="form-control form-control-sm" /></div>
                            </div>
                        </div>

                        <div class="card-footer py-2">
                            @if (Model.CanSave)
                            {
                                <button type="submit" class="btn btn-primary btn-sm px-4 mr-2 mb-1"><i class="fas fa-save"></i> Save</button>
                            }
                            @if (Model.CanSubmit)
                            {
                                <button type="submit" formaction="?handler=SubmitApproval" class="btn btn-warning btn-sm px-4 mr-2 mb-1"><i class="fas fa-paper-plane"></i> Submit</button>
                            }
                            else if (Model.IsEdit && Model.PagePerm.HasPermission(4) && Model.IsSubmitted)
                            {
                                <button type="button" class="btn btn-warning btn-sm px-4 mr-2 mb-1" disabled title="Already submitted"><i class="fas fa-paper-plane"></i> Submit</button>
                            }
                            <a asp-page="./Index" class="btn btn-default btn-sm px-4 mb-1">Close</a>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card card-success card-outline h-100 mb-0">
                        <div class="card-header p-2">
                            <h3 class="card-title">Approved Information</h3>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive" style="max-height: 520px;">
                                <table class="table table-sm table-bordered table-hover mb-0">
                                    <thead class="thead-light sticky-top">
                                        <tr>
                                            <th>Action</th>
                                            <th>User</th>
                                            <th>Action Date</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.Histories.Count == 0)
                                        {
                                            <tr><td colspan="3" class="text-center text-muted">No history</td></tr>
                                        }
                                        else
                                        {
                                            @foreach (var h in Model.Histories)
                                            {
                                                <tr>
                                                    <td>@h.Action</td>
                                                    <td>@h.UserCode</td>
                                                    <td>@(h.ActionDate?.ToString("dd/MM/yyyy HH:mm") ?? "")</td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="card-footer py-2 text-right">
                            <a asp-page="./Index" class="btn btn-default btn-sm">Back to List</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
