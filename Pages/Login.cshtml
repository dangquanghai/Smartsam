@page
@model SmartSam.Pages.LoginModel
@{
    Layout = null;
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light d-flex align-items-center justify-content-center" style="height:100vh;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-4 col-sm-10">
                <div class="card shadow-lg p-4 rounded-4">
                    <h3 class="text-center mb-3">Login</h3>

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger text-center">@TempData["Error"]</div>
                    }
                    @if (!string.IsNullOrWhiteSpace(Model.Message))
                    {
                        <div class="alert alert-danger text-center">@Model.Message</div>
                    }

                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label">User Code</label>
                            <input asp-for="Username" class="form-control" placeholder="Input user code" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Password</label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="input Password" />
                        </div>
                        <button type="submit" class="btn btn-primary w-100 py-2">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
