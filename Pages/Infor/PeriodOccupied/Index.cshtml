@page
@model SmartSam.Pages.Infor.PeriodOccupied.IndexModel
@{
    ViewData["Title"] = "Period Occupied Status";
}

<style>
    /* BỐ CỤC CHUNG */
    .occupancy-container {
        display: flex;
        display: flex;
        gap: 10px;
        align-items: flex-start;
    }

    .main-panel {
        flex: 0 0 82%;
        min-width: 0;
    }

    .side-panel {
        flex: 0 0 17%;
    }

    /* BẢNG TỰ NHIÊN */
    .grid-wrapper {
        width: 100%;
        overflow: auto;
        max-height: 75vh;
        border: 1px solid #dee2e6;
        background: #fff;
    }

    .table-occupied {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
    }

        .table-occupied th, .table-occupied td {
            border: 1px solid #dee2e6;
            padding: 5px 4px !important;
            white-space: nowrap;
            font-size: 12px;
        }

    /* ÉP CỘT TRÁI NHỎ LẠI */
    .col-shrink {
        width: 1px;
        font-weight: bold;
        background: #f4f6f9 !important;
    }

    /* CỘT NGÀY */
    .day-cell {
        text-align: center;
        min-width: 35px;
    }

    .day-sun {
        color: red !important;
        background-color: #fff0f0 !important;
    }

    /* STICKY LOGIC */
    .sticky-col {
        position: sticky;
        z-index: 2;
        outline: 1px solid #dee2e6;
    }

    .table-occupied thead th {
        position: sticky;
        top: 0;
        background: #eee !important;
        z-index: 4;
    }

        .table-occupied thead th.sticky-col {
            z-index: 5;
        }

    /* VÙNG 3 ĐẸP HƠN */
    .detail-box {
        height: 100%;
        border-top: 3px solid #17a2b8;
    }

    .ui-selected {
        background-color: #007bff !important;
        color: white !important;
    }

    /* Ép Select2 luôn có độ cao cố định, không giãn nở */
    .select2-container--bootstrap4 .select2-selection--multiple {
        height: calc(1.5em + 0.75rem + 2px) !important; /* Độ cao chuẩn của form-control-sm */
        overflow: hidden !important; /* Giấu các item bị thừa */
        flex-wrap: nowrap !important; /* Không cho xuống dòng */
        display: flex;
        align-items: center;
    }

        /* Ẩn bớt các tag đã chọn để không làm chật ô input */
        .select2-container--bootstrap4 .select2-selection--multiple .select2-selection__choice {
            max-width: 100px;
            overflow: hidden;
            text-overflow: ellipsis;
        }

    /* Thêm hiệu ứng dấu check cho danh sách sổ xuống */
    .select2-results__option[aria-selected=true]::before {
        content: " \f14a "; /* Icon checkbox checked của FontAwesome */
        font-family: "Font Awesome 5 Free";
        font-weight: 900;
        margin-right: 5px;
        color: #007bff;
    }

    .select2-results__option::before {
        content: " \f0c8 "; /* Icon checkbox empty */
        font-family: "Font Awesome 5 Free";
        font-weight: 400;
        margin-right: 5px;
        color: #ccc;
    }

    /* 1. Hiển thị Label rõ ràng */
    .filter-label {
        font-weight: bold;
        font-size: 13px;
        margin-right: 8px;
        display: inline-block; /* Đảm bảo label không bị mất */
    }

    /* 2. Hiển thị lại khung của Select2 */
    .select2-container--bootstrap4 .select2-selection--multiple {
        min-height: 31px !important; /* Độ cao chuẩn của form-control-sm */
        height: 31px !important;
        border: 1px solid #ced4da !important; /* Hiện lại đường viền */
        border-radius: 4px !important;
        background-color: #fff !important;
        overflow: hidden !important;
        flex-wrap: nowrap !important;
        display: flex !important;
        align-items: center !important;
    }

    /* Hiển thị hiệu ứng khi click vào (Focus) */
    .select2-container--bootstrap4.select2-container--focus .select2-selection--multiple {
        border-color: #80bdff !important;
        box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, .25) !important;
    }
    /* 3. Đảm bảo dấu Check và text hiển thị đúng */
    .select2-selection__rendered {
        display: flex !important;
        padding: 0 8px !important;
        width: 100%;
    }

    /* Tùy chỉnh danh sách Checklist khi bung combo */
    .select2-results__option[aria-selected=true]::before {
        content: " \f14a ";
        font-family: "Font Awesome 5 Free";
        font-weight: 900;
        margin-right: 8px;
        color: #007bff;
    }

    /* Ngăn chặn việc hiển thị tràn nội dung khi trang vừa load */
    .select2-container--bootstrap4 .select2-selection--multiple .select2-selection__rendered {
        display: block !important; /* Thay vì flex để tránh kéo dãn */
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    /* Đảm bảo khung dropdown của select2 luôn ẩn khi khởi tạo */
    .select2-container--open .select2-dropdown {
        z-index: 9999;
    }

    /* Tinh chỉnh nhãn trong vùng thông tin hợp đồng */
    .text-label {
        font-size: 12px;
        font-weight: bold;
        color: #495057;
        display: flex;
        align-items: center;
        padding-right: 0 !important;
    }

    .contract-info-grid .form-control[readonly] {
        background-color: #f8f9fa !important; /* Màu nền nhẹ cho ô chỉ đọc */
        border: 1px solid #e9ecef;
        font-size: 12px;
    }

    /* Đảm bảo đường kẻ dọc ngăn cách */
    .border-right {
        border-right: 2px solid #f4f6f9 !important;
    }

    /* Vùng 1.3 Thống kê */
    .stat-container {
        height: 100%;
        display: flex;
        flex-direction: column;
        justify-content: center; /* Căn giữa nội dung theo chiều dọc */
    }

        .stat-container .small {
            font-size: 11px;
            text-transform: uppercase;
        }

    .border-left {
        border-left: 1px solid #dee2e6 !important;
    }

    /* Hiệu ứng badge cho tổng số căn hộ */
    .badge-secondary {
        background-color: #6c757d;
        font-size: 12px;
    }
</style>

<div class="content">
    <div class="container-fluid">
        <div class="card mb-2">
            <div class="card-body p-2">
                <div class="row">
                    <div class="col-md-5 border-right">
                        <form method="get" id="filterForm">
                            <div class="form-group row mb-2">
                                <label class="col-sm-2 col-form-label col-form-label-sm font-weight-bold">Period:</label>
                                <div class="col-sm-10">
                                    <div class="row no-gutters">
                                        <div class="col-sm-9 pr-2">
                                            <div class="input-group input-group-sm" id="date-group-wrapper">
                                                <input type="text" asp-for="DateRange" class="form-control form-control-sm" id="reservationtime" readonly>
                                            </div>
                                        </div>
                                        <div class="col-sm-3">
                                            <button type="submit" class="btn btn-primary btn-sm btn-block">
                                                <i class="fas fa-search"></i> VIEW
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group row mb-0">
                                <label class="col-sm-2 col-form-label col-form-label-sm font-weight-bold">Status:</label>
                                <div class="col-sm-10">
                                    <select asp-for="SelectedStatuses" class="form-control select2-multiple" multiple="multiple">
                                        @foreach (var item in Model.OccTypeList)
                                        {
                                            <option value="@item.ID">@item.Name</option>
                                        }
                                    </select>
                                </div>
                            </div>

                        </form>
                    </div>
                    <div class="col-md-5">
                        <div class="contract-info-grid">
                            <div class="row mb-1">
                                <div class="col-md-2 text-label">Apartment No:</div>
                                <div class="col-md-3"><input type="text" id="infoApartment" class="form-control form-control-sm bg-light" readonly></div>
                                <div class="col-md-2 text-label">Period:</div>
                                <div class="col-md-5"><input type="text" id="infoPeriod" class="form-control form-control-sm bg-light" readonly placeholder="From - To"></div>
                            </div>
                            <div class="row mb-1">
                                <div class="col-md-2 text-label">Contract No:</div>
                                <div class="col-md-3"><input type="text" id="infoContractNo" class="form-control form-control-sm bg-light" readonly></div>
                                <div class="col-md-2 text-label">Customer:</div>
                                <div class="col-md-5"><input type="text" id="infoCustomer" class="form-control form-control-sm bg-light" readonly placeholder="Name & ID"></div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="stat-container border-left pl-2 h-100 d-flex flex-column justify-content-center">
                            <div class="row no-gutters mb-2">
                                <div class="col-6 border-right pr-1">
                                    <div class="small text-muted" style="font-size: 10px;">UNITS</div>
                                    <div class="font-weight-bold" style="font-size: 14px;">@Model.Rooms.Count</div>
                                </div>
                                <div class="col-6 pl-1">
                                    <div class="small text-info" style="font-size: 10px;">DB</div>
                                    <div class="font-weight-bold text-info" style="font-size: 14px;">@Model.Rooms.Sum(r => r.DoubleBeds)</div>
                                </div>
                            </div>

                            <div class="row no-gutters">
                                <div class="col-6 border-right pr-1">
                                    <div class="small text-warning" style="font-size: 10px;">RM</div>
                                    <div class="font-weight-bold text-warning" style="font-size: 14px;">@Model.Rooms.Count(r => r.IsRemodeling)</div>
                                </div>
                                <div class="col-6 pl-1">
                                    <div class="small text-danger" style="font-size: 10px;">RF</div>
                                    <div class="font-weight-bold text-danger" style="font-size: 14px;">@Model.Rooms.Count(r => r.IsRefresh)</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="occupancy-container">
        <div class="main-panel">
            <div class="grid-wrapper">
                <table class="table-occupied" id="occupancyTable">
                    <thead>
                        <tr>
                            <th class="sticky-col st-unit col-shrink">Unit No</th>
                            <th class="sticky-col st-db col-shrink">DB</th>
                            <th class="sticky-col st-rm col-shrink">RM</th>
                            <th class="sticky-col st-rf col-shrink text-right">RF</th>
                            @foreach (var day in Model.DaysList)
                            {
                                <th class="day-cell @(day.DayOfWeek == DayOfWeek.Sunday ? "day-sun" : "")">
                                    @day.Day<br /><small>@day.ToString("MM/yy")</small>
                                </th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var room in Model.Rooms)
                        {
                            <tr>
                                <td class="sticky-col st-unit col-shrink @room.TextColorClass">@room.ApartmentNo</td>
                                <td class="sticky-col st-db col-shrink text-center">@room.DoubleBeds</td>
                                <td class="sticky-col st-rm col-shrink text-center">@(room.IsRemodeling ? "1" : "0")</td>
                                <td class="sticky-col st-rf col-shrink text-center">@(room.IsRefresh ? "1" : "0")</td>
                                @foreach (var day in Model.DaysList)
                                {
                                    var occ = room.Occupancies?.FirstOrDefault(o => day.Date >= o.FromDate.Date && day.Date <= o.ToDate.Date);
                                    if (occ != null)
                                    {
                                        <td class="day-cell" style="background-color: @occ.BackColorHex; color: @occ.ForeColorHex; font-size: 11px;">
                                            @occ.StatusName.Substring(0, Math.Min(occ.StatusName.Length, 3))
                                        </td>
                                    }
                                    else
                                    {
                                        <td class="day-cell selectable" data-room="@room.ApartmentNo" data-date="@day.ToString("dd/MM/yyyy")"></td>
                                    }
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="side-panel">
                <div class="card card-outline card-primary shadow-sm">
                    <div class="card-header p-2 bg-light">
                        <div class="d-flex justify-content-between align-items-center">
                            <h3 class="card-title font-weight-bold text-primary" style="font-size: 14px;">
                                <i class="fas fa-swatchbook mr-1"></i> ROOM STATUS LEGEND
                            </h3>
                            <span class="badge badge-pill badge-secondary" style="font-size: 10px;">
                                @Model.OccTypeList?.Count Status
                            </span>
                        </div>
                    </div>

                    <div class="card-body p-3">
                        @if (Model.OccTypeList != null && Model.OccTypeList.Any())
                        {
                            foreach (var item in Model.OccTypeList)
                            {
                                <div class="d-flex align-items-center mb-2 pb-1 border-bottom-light">
                                    <div class="text-center shadow-sm font-weight-bold"
                                         style="background-color: @item.BackColor;
                                color: @item.ForeColor;
                                padding: 4px 12px;
                                border-radius: 4px;
                                display: inline-block;
                                min-width: 80px;
                                border: 1px solid rgba(0,0,0,0.1);
                                font-size: 11px;
                                text-transform: uppercase;">
                                        @item.StatusName
                                    </div>

                                    <div class="ml-3">
                                        <span class="text-dark font-weight-bold" style="font-size: 13px;">
                                            @item.Name
                                        </span>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="text-center p-3">
                                <i class="fas fa-exclamation-triangle text-warning d-block mb-2"></i>
                                <span class="text-muted small">Not found.</span>
                            </div>
                        }
                    </div>

                    <div class="card-footer p-1 text-center bg-white border-top-0">
                        <small class="text-muted" style="font-size: 10px;">
                            <i class="fas fa-sync-alt mr-1"></i> Refresh 
                        </small>
                    </div>
                </div>
        </div>
    </div>
    </div>
</div>

<div class="modal fade" id="modalReservation" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-info text-white p-2">
                <h5 class="modal-title small font-weight-bold">Create Short Term Reservation</h5>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body p-3">
                <div class="form-group mb-2">
                    <label class="small font-weight-bold">Selected Room</label>
                    <input type="text" id="popRoom" class="form-control form-control-sm bg-light" readonly>
                </div>
                <div class="form-group mb-0">
                    <label class="small font-weight-bold">Booking Period</label>
                    <textarea id="popPeriod" class="form-control form-control-sm" rows="3" readonly style="background:#fdfdfd;"></textarea>
                </div>
            </div>
            <div class="modal-footer p-2">
                <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Close</button>

                @* Kiểm tra quyền MakeSTRS *@
                @{
                    // Ép kiểu an toàn từ ViewData
                    bool canMakeSTRS = ViewData["CanMakeSTRS"] as bool? ?? false;
                }

                @if (canMakeSTRS)
                {
                    <button type="button" id="btnCreateReservation" class="btn btn-primary btn-sm px-4">
                        <i class="fas fa-plus mr-1"></i> CREATE
                    </button>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>

    <script>
        $(function () {
            // Khởi tạo daterange theo common.js. Nếu muốn từ ngày đến ngày liên hệ với nhau thì khởi tạo
            window.initSimpleDateRange('reservationtime', null, null, {
                linkedCalendars: false
            });

            // Tính toán Sticky động
            function fixSticky() {
                let left = 0;
                $('.table-occupied thead th.sticky-col').each(function () {
                    let cls = $(this).attr('class').split(' ').find(c => c.startsWith('st-'));
                    $('.' + cls).css('left', left + 'px');
                    left += $(this).outerWidth();
                });
            }
            fixSticky();
            $(window).resize(fixSticky);

            // Khởi tạo Select2
            var $statusSelect = $('.select2-multiple').select2({
                theme: 'bootstrap4',
                placeholder: ' Select statuses...',
                allowClear: true,
                closeOnSelect: false, // Giữ để chọn nhiều cái liên tiếp
                selectOnClose: false, // Đảm bảo không tự chọn khi đóng
                templateSelection: function (data) {
                    var selectedCount = $('.select2-multiple').select2('data').length;
                    if (selectedCount > 1) {
                        return selectedCount + " statuses selected";
                    }
                    return data.text;
                }
            });

            // GIẢI PHÁP: Ép combo đóng lại và mất focus sau khi trang load xong
            // Việc này ngăn chặn trình duyệt tự động bung combo khi nhấn nút View/Reload
            $statusSelect.on('select2:select select2:unselect', function (e) {
                // Vẫn giữ logic của bạn ở đây nếu cần
            });

            // Ép mất focus để không tự bung
            if ($('.select2-multiple').data('select2')) {
                $('.select2-multiple').data('select2').close();
            }

            // Đảm bảo không có phần tử nào trong Select2 giữ focus khi vừa load
            $(':focus').blur();


            // Cập nhật lại logic Selectable
            $("#occupancyTable tbody tr").selectable({
                filter: ".selectable",
                stop: function () {
                    let selected = $(this).find(".ui-selected");
                    if (selected.length > 0) {
                        let room = selected.first().data("room");
                        let fromDate = selected.first().data("date");
                        let toDate = selected.last().data("date");
                        let totalNights = selected.length;

                        // Đổ dữ liệu vào Modal
                        $("#popRoom").val(room);
                        $("#popPeriod").val("From: " + fromDate + "\nTo: " + toDate + "\nTotal: " + totalNights + " nights.");

                        // Hiển thị Modal
                        $("#modalReservation").modal('show');

                        // Xóa bôi xanh trên bảng sau khi đã mở modal (tùy chọn)
                        // $(selected).removeClass("ui-selected");
                    }
                }
            });

            $('.select2-multiple').select2({
                theme: 'bootstrap4',
                placeholder: ' Select statuses...',
                allowClear: true,
                closeOnSelect: false, // Giữ combo mở để chọn nhiều cái liên tiếp
                templateSelection: function (data, container) {
                    // Nếu chọn quá nhiều, chỉ hiện chữ "X items selected" thay vì hiện hết tag
                    var selectedCount = $('.select2-multiple').select2('data').length;
                    if (selectedCount > 1) {
                        return selectedCount + " statuses selected";
                    }
                    return data.text;
                }
            });

            $('#btnCreateReservation').on('click', function () {
                const room = $("#popRoom").val();
                const periodText = $("#popPeriod").val();

                // Ở đây bạn có thể redirect sang trang tạo reservation hoặc gọi Ajax
                // Ví dụ: window.location.href = "/Infor/Reservation/Create?room=" + room;

                alert("Redirecting to create reservation for Room: " + room);
            });

        });
    </script>
}