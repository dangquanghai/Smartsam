@page 
@model MeterUploadModel
@{
    ViewData["Title"] = "Meter Upload";
}

<section class="content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-md-12">

                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Meter Upload</h3>
                    </div>
                    <div class="card-body">

                        @if (TempData["Message"] != null)
                        {
                            <div class="alert alert-success">
                                @TempData["Message"]
                            </div>
                        }

                        <div class="form-group">
                            <label>Chọn ảnh công tơ</label>
                            <div class="custom-file">
                                <input type="file"
                                       id="fileInput"
                                       multiple
                                       accept="image/*"
                                       class="custom-file-input" />
                                <label class="custom-file-label">Choose files</label>
                            </div>
                        </div>

                        <button type="button"
                                class="btn btn-primary"
                                id="btnUpload">
                            <i class="fas fa-upload"></i> Upload
                        </button>

                        <div class="mt-3" id="status"></div>

                        <!-- Progress bar -->
                        <div class="progress mt-3" style="height: 25px; display:none;" id="progressContainer">
                            <div class="progress-bar progress-bar-striped progress-bar-animated"
                                 id="progressBar"
                                 role="progressbar"
                                 style="width:0%">
                                0%
                            </div>
                        </div>

                    </div>

                    <div class="card-footer text-muted">
                        Hỗ trợ upload nhiều ảnh
                    </div>

                </div>

            </div>
        </div>
        @section Scripts {
            <script src="~/js/Cus/MeterUpload.js" asp-append-version="true"></script>
        }
    </div>
</section>

<form method="post" enctype="multipart/form-data" id="uploadForm">
    @Html.AntiForgeryToken()
</form>
